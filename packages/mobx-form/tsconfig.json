 {
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": false,
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}